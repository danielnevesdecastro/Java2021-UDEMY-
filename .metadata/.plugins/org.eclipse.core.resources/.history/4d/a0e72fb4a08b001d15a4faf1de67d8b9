package desafios;
//59 , Desafio 
import java.util.Scanner;

public class Exe04_QuadradoCubo {
	/** 4. Criar um programa que leia um 
	 * valor e apresente os resultados ao quadrado e ao cubo do valor. */
	public static void main(String[] args) {
		double n1, quadrado,cubo;
		Scanner scan = new Scanner(System.in); 
		
		System.out.println("Informe \nNº1: ");
		n1 = scan.nextDouble();
		
		quadrado = n1 * n1;
		cubo = n1 *n1 * n1; 
			
		System.out.println(n1+" Ao quadrado é: "+quadrado+"\n e ao Cubo: "+cubo);
		
		
		
		
		
	}
}
