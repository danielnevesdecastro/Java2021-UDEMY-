package controle;

//Aula 70, For 
public class For1 {
	public static void main(String[] args) {

		for (int cont = 1; cont <= 10; cont++) {
			System.out.printf("Bom dia Nº %d\n", cont);
		}

		int x = 2;
		for (;x < 10;) {//apenas a expressão , sem inicialização, sem incrementação
			System.out.println("x = "+x);
			x++;
			
		}
		
		for(;;) {//Laço infinito
			System.out.println("fim !!!");
		}
	}
}
