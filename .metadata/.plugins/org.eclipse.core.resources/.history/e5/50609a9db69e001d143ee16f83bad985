package arrays;

import java.util.Arrays;
import java.util.Scanner;

//Aula 125 , Matriz
public class Matriz {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.println("Nº de Alunos:");
		int alunos = scan.nextInt();
		System.out.println("Qtd de Notas:");
		int notas = scan.nextInt();

		double[][] notasAlunos = new double[alunos][notas];

		for (int i = 0; i < notasAlunos[alunos].length; i++) {
			for (int j = 0; j < notasAlunos[notas].length; j++) {
				int indiceAluno = i + 1;
				int indiceNota = j + 1;
				System.out.println(indiceAluno + "º Aluno, Nota" + indiceNota);
				notasAlunos[i][j] = scan.nextDouble();
			}
		}
		
		System.out.println(Arrays.toString(notasAlunos));
		
		/*
		double[] soma = new double[alunos];
		
		for (double[] aluno : notasAlunos) {
			for (double nota : notasAlunos){
				
			}
		}
*/
		scan.close();
	}

}
