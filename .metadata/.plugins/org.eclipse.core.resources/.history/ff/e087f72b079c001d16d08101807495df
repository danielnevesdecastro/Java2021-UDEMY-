package classe;

//Aula 104 , Menbros de Classe vs Objeto
public class AreaCirc {

	double raio;
	// menbro associado a classe , constante
	// final = modificador pra definir constante
	// PI = convenção da nomeclatura da constante MAIUSCULO,
	static final double PI = 3.14;

	// Construtor Default
	AreaCirc() {
	}

	// Construtor Explícito (com parametros)
	AreaCirc(double raioInicial) {
		// pi = 3.14;
		raio = raioInicial;
	}

	// Método
	double area() {
		// pi x raio²
		// return pi * raio * raio; forma manual
		return PI * Math.pow(raio, 2);

	}

}
