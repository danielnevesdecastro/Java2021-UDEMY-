package desafios;

import java.util.Scanner;

//Desafio 86
public class Contr_06_AdvinhacaoNumeros {
	public static void main(String[] args) {
		// Advinhar o número
		Scanner entrada = new Scanner(System.in);
		int numAdv = 89;
		int tentativas;
		String advinhacao = "";
		
		
		
		for (tentativas = 9; tentativas >= 0; tentativas--) {
			System.out.println("Advinhe o número:");
			int num = entrada.nextInt();

			if (num > numAdv) {
				advinhacao = " Número Maior";
			} else if (num < numAdv) {
				advinhacao = "Número Menor";
			} else if (num == numAdv) {
				advinhacao = "\n*** Você Acertou !!! ***";
			}

			if (num != numAdv) {
				if (tentativas == 0) {
					System.out.println("\nVocê não conseguiu, o número era: " + numAdv);
					entrada.close();
					break;
				} else {
					System.out.println("Restam " + tentativas + "Tentativas");
					System.out.println(advinhacao);
				}
			} else {
				System.out.println(advinhacao);
				entrada.close();
				break;
			}
		}
		entrada.close();
		
	}
	/*
