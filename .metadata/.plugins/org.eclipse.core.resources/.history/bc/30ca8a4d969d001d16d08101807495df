package desafios.classe;

import java.util.Scanner;

public class Jantar {
	public static void main(String[] args) {
		
		Pessoa p1 = new Pessoa();
		Comida c1 = new Comida("Feijão", 0.950);
		Comida c2 = new Comida("Arroz", 0.500);
		double pesoOriginal;	
		
		
		
		Scanner scan = new Scanner(System.in);
		
		
		System.out.println("Nome:");
		p1.nome = scan.next();
		System.out.println("Peso");
		p1.peso = scan.nextDouble();
		pesoOriginal = p1.peso;
	
		
		p1.comer(c1.peso);
		
		System.out.printf("%s tinha %.3fKG , depois de comer \n"
				+ "%s está com %.3fKG ", p1.nome, pesoOriginal, c1.nome, p1.peso );
		
		scan.close();
	}
}
