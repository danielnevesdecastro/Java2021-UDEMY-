package desafios;
//Aula 59, Desafio 2 
import java.util.Scanner;

public class Exe01_ConversaoTemperatura {
		/** 2. Criar um programa que leia a temperatura 
		 * em Fahrenheit e converta para Celsius. */
	public static void main(String[] args) {
		
		Scanner dado = new Scanner(System.in);
		
	System.out.println("Informe os graus Celsius");
		
		double c = dado.nextDouble();
		double cparaF = (c * 9/5) + 32 ;
		System.out.printf("%.0f ºC são %.2f graus Fahrenheit",c, cparaF);
	}
}
